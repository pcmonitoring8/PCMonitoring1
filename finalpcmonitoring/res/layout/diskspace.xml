<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/imgmain"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/spnMachineList1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/machinename" />

    <Spinner
        android:id="@+id/spnDrive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/DiskSpace" />

    <Button
        android:id="@+id/btncheckdisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="doDisplayDiskSpace"
        android:text="Perform" />
        
        

</TableLayout>
